---
interface Props {
  title: string;
  subtitle: string;
  primaryCta?: string;
  secondaryCta?: string;
}

const { title, subtitle, primaryCta, secondaryCta } = Astro.props;
---

<div class="hero-container">
  <div class="hero-bg"></div>
  <div class="hero-content">
    <h1 class="hero-title">{title}</h1>
    <p class="hero-subtitle">{subtitle}</p>
    {(primaryCta || secondaryCta) && (
      <div class="hero-buttons">
        {primaryCta && <button class="btn-primary">{primaryCta}</button>}
        {secondaryCta && <button class="btn-secondary">{secondaryCta}</button>}
      </div>
    )}
  </div>
  <div class="hero-glow"></div>
</div>

<style>
  .hero-container {
    position: relative;
    padding: 80px 32px;
    margin: -24px -24px 32px -24px;
    border-radius: 0 0 24px 24px;
    overflow: hidden;
    text-align: center;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #0a0a1a 0%, #1a1030 50%, #0a1525 100%);
    z-index: 0;
  }

  .hero-bg::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse at 20% 20%, rgba(99, 91, 255, 0.15) 0%, transparent 50%),
      radial-gradient(ellipse at 80% 30%, rgba(0, 212, 255, 0.1) 0%, transparent 50%),
      radial-gradient(ellipse at 40% 80%, rgba(255, 128, 181, 0.08) 0%, transparent 50%);
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 700px;
    margin: 0 auto;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 700;
    background: linear-gradient(135deg, #ffffff 0%, #b4b0ff 50%, #00d4ff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 16px;
    line-height: 1.1;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 32px;
    line-height: 1.6;
  }

  .hero-buttons {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    background: #635bff;
    color: white;
    font-size: 14px;
    font-weight: 425;
    line-height: 24px;
    height: 33px;
    padding: 3px 12px 6px 16px;
    border-radius: 16.5px;
    border: none;
    cursor: pointer;
    transition: background-color 0.15s ease;
  }

  .btn-primary:hover {
    background: #7a73ff;
  }

  .btn-primary::after {
    content: '';
    display: inline-block;
    width: 5px;
    height: 5px;
    border-right: 1.5px solid currentColor;
    border-top: 1.5px solid currentColor;
    transform: rotate(45deg);
  }

  .btn-secondary {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    background: transparent;
    color: rgba(255, 255, 255, 0.9);
    font-size: 14px;
    font-weight: 425;
    line-height: 24px;
    height: 33px;
    padding: 3px 8px 6px 8px;
    border-radius: 16.5px;
    border: none;
    cursor: pointer;
    transition: color 0.15s ease;
  }

  .btn-secondary:hover {
    color: #b4b0ff;
  }

  .btn-secondary::after {
    content: '';
    display: inline-block;
    width: 5px;
    height: 5px;
    border-right: 1.5px solid currentColor;
    border-top: 1.5px solid currentColor;
    transform: rotate(45deg);
  }

  .hero-glow {
    position: absolute;
    bottom: -50%;
    left: 50%;
    transform: translateX(-50%);
    width: 600px;
    height: 300px;
    background: radial-gradient(ellipse, rgba(99, 91, 255, 0.2) 0%, transparent 70%);
    pointer-events: none;
    z-index: 0;
  }

  @media (max-width: 640px) {
    .hero-title {
      font-size: 2rem;
    }
    .hero-subtitle {
      font-size: 1rem;
    }
    .hero-container {
      padding: 48px 20px;
    }
  }
</style>
