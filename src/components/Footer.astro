---
import type { Props } from '@astrojs/starlight/props';
import Default from '@astrojs/starlight/components/Footer.astro';
import FloatingStyleGuideButton from './FloatingStyleGuideButton.astro';
import { Chat } from './chat';
---

<Default {...Astro.props}><slot /></Default>

<!-- Changelog Badge - Fixed position above FABs -->
<a href="/changelog/" class="changelog-badge" title="See what's new">
  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <path d="M12 8v4l3 3"/>
    <circle cx="12" cy="12" r="10"/>
  </svg>
  <span class="changelog-text">What's New</span>
  <span class="changelog-dot"></span>
</a>

<FloatingStyleGuideButton />
<Chat client:load />

<style>
  .changelog-badge {
    position: fixed;
    bottom: 144px;
    right: 24px;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.875rem;
    background: var(--sl-color-bg);
    border: 1px solid var(--sl-color-hairline);
    border-radius: 20px;
    color: var(--sl-color-text);
    font-size: 0.8125rem;
    font-weight: 500;
    text-decoration: none;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: all 0.2s ease;
    z-index: 999;
  }

  .changelog-badge:hover {
    border-color: var(--sl-color-accent);
    box-shadow: 0 4px 12px rgba(99, 91, 255, 0.15);
    transform: translateY(-2px);
  }

  .changelog-badge svg {
    color: var(--sl-color-accent);
  }

  .changelog-text {
    display: none;
  }

  .changelog-dot {
    width: 6px;
    height: 6px;
    background: linear-gradient(135deg, #10B981, #34D399);
    border-radius: 50%;
    animation: pulse-dot 2s ease-in-out infinite;
  }

  @keyframes pulse-dot {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.6; transform: scale(1.2); }
  }

  /* Show text on larger screens */
  @media (min-width: 768px) {
    .changelog-text {
      display: inline;
    }
  }

  /* Adjust position on mobile */
  @media (max-width: 640px) {
    .changelog-badge {
      bottom: 136px;
      right: 16px;
      padding: 0.5rem 0.75rem;
    }
  }
</style>
