---
/**
 * DocVersionInfo component
 * Displays version information below page title for docs with versioning
 */

interface VersionChange {
  version: string;
  date: string;
  changes: string[];
  appVersion?: string;
}

interface Props {
  docVersion?: string;
  appVersion?: string;
  appName?: string;
  versionHistory?: VersionChange[];
}

const { docVersion, appVersion, appName, versionHistory } = Astro.props;

// Only render if at least docVersion is provided
const hasVersionInfo = docVersion || appVersion;
---

{hasVersionInfo && (
  <div class="doc-version-info">
    <div class="version-badges">
      {docVersion && (
        <span class="version-badge doc-version">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
          </svg>
          Doc v{docVersion}
        </span>
      )}
      {appVersion && appName && (
        <span class="version-badge app-version">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="m21 7.5-9-5.25L3 7.5m18 0-9 5.25m9-5.25v9l-9 5.25M3 7.5l9 5.25M3 7.5v9l9 5.25m0-9v9" />
          </svg>
          For {appName} v{appVersion}
        </span>
      )}
    </div>

    {versionHistory && versionHistory.length > 0 && (
      <details class="version-history">
        <summary>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="history-icon">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
          </svg>
          Version History
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="chevron-icon">
            <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
          </svg>
        </summary>
        <div class="history-content">
          {versionHistory.map((entry) => (
            <div class="history-entry">
              <div class="history-header">
                <span class="history-version">v{entry.version}</span>
                <span class="history-date">{entry.date}</span>
                {entry.appVersion && (
                  <span class="history-app-version">App v{entry.appVersion}</span>
                )}
              </div>
              <ul class="history-changes">
                {entry.changes.map((change) => (
                  <li>{change}</li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </details>
    )}
  </div>
)}

<style>
  .doc-version-info {
    margin-top: 0.75rem;
    padding-top: 0.75rem;
    border-top: 1px solid var(--sl-color-hairline-light);
  }

  .version-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    align-items: center;
  }

  .version-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.75rem;
    font-weight: 500;
    padding: 0.25rem 0.625rem;
    border-radius: 9999px;
    background: var(--sl-color-bg-inline-code);
    color: var(--sl-color-gray-2);
  }

  .version-badge svg {
    width: 14px;
    height: 14px;
    opacity: 0.7;
  }

  .doc-version {
    background: rgba(99, 91, 255, 0.1);
    color: #635BFF;
    border: 1px solid rgba(99, 91, 255, 0.2);
  }

  :root[data-theme='light'] .doc-version {
    color: #5521B5;
  }

  .app-version {
    background: rgba(0, 212, 255, 0.1);
    color: #00b8d9;
    border: 1px solid rgba(0, 212, 255, 0.2);
  }

  :root[data-theme='light'] .app-version {
    color: #0079bf;
  }

  .version-history {
    margin-top: 0.75rem;
  }

  .version-history summary {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--sl-color-gray-3);
    cursor: pointer;
    padding: 0.375rem 0.625rem;
    border-radius: 0.5rem;
    transition: all 0.15s ease;
    list-style: none;
  }

  .version-history summary::-webkit-details-marker {
    display: none;
  }

  .version-history summary:hover {
    color: var(--sl-color-accent);
    background: rgba(99, 91, 255, 0.05);
  }

  .version-history summary svg {
    width: 14px;
    height: 14px;
  }

  .chevron-icon {
    transition: transform 0.2s ease;
    margin-left: auto;
  }

  .version-history[open] .chevron-icon {
    transform: rotate(180deg);
  }

  .history-content {
    margin-top: 0.75rem;
    padding-left: 0.5rem;
    border-left: 2px solid var(--sl-color-hairline);
  }

  .history-entry {
    padding: 0.625rem 0 0.625rem 0.75rem;
  }

  .history-entry:not(:last-child) {
    border-bottom: 1px solid var(--sl-color-hairline-light);
  }

  .history-header {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    align-items: center;
    margin-bottom: 0.375rem;
  }

  .history-version {
    font-weight: 600;
    font-size: 0.8125rem;
    color: var(--sl-color-text);
  }

  .history-date {
    font-size: 0.75rem;
    color: var(--sl-color-gray-3);
  }

  .history-app-version {
    font-size: 0.6875rem;
    padding: 0.125rem 0.5rem;
    background: rgba(0, 212, 255, 0.1);
    color: #00b8d9;
    border-radius: 9999px;
  }

  :root[data-theme='light'] .history-app-version {
    color: #0079bf;
  }

  .history-changes {
    margin: 0;
    padding-left: 1.25rem;
    font-size: 0.8125rem;
    color: var(--sl-color-gray-2);
  }

  .history-changes li {
    margin: 0.25rem 0;
    line-height: 1.4;
  }

  .history-changes li::marker {
    color: var(--sl-color-accent);
  }
</style>
